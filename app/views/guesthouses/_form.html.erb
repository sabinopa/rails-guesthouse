<%= form_with model: guesthouse do |f| %>
  <div>
    <%= f.label :description %>: 
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :brand_name %>: 
    <%= f.text_field :brand_name %>
  </div>

  <div>
    <%= f.label :corporate_name %>: 
    <%= f.text_field :corporate_name %>
  </div>

  <div>
    <%= f.label :registration_number %>: 
    <%= f.text_field :registration_number %>
  </div>

  <div>
    <%= f.label :phone_number %>: 
    <%= f.telephone_field :phone_number %>
  </div>

  <div>
    <%= f.label :email %>: 
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :address %>: 
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :neighborhood %>: 
    <%= f.text_field :neighborhood %>
  </div>

  <div>
    <%= f.label :city %>: 
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>: 
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :postal_code %>: 
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :payment_method_id %>: 
    <%= f.collection_select :payment_method_id, PaymentMethod.all, :id, :method %>
  </div>

  <div>
    <%= f.check_box :pet_friendly %>
    <%= f.label :pet_friendly %>
  </div>

  <div>
    <%= f.label :usage_policy %>: 
    <%= f.text_area:usage_policy %>
  </div>

  <div>
    <%= f.label :checkin %>: 
    <%= f.time_field :checkin %>
  </div>

  <div>
    <%= f.label :checkout %>: 
    <%= f.time_field :checkout %>
  </div>

  <%= f.submit t('helpers.submit.submit') %>

<% end %>