<p><%= t('views.availability.check')%></p>

<%= form_with(url: availability_guesthouse_room_path(@guesthouse, @room), method: :get) do |f| %>
<div>
  <%= f.hidden_field :guesthouse_id, value: guesthouse.id %>
  <%= f.hidden_field :room_id, value: room.id %>
</div>

<div>
  <%= f.label :start_date, t('activerecord.attributes.booking.start_date') %>: 
  <%= f.date_field :start_date, required: true %>
</div>

<div>
  <%= f.label :end_date, t('activerecord.attributes.booking.end_date') %>: 
  <%= f.date_field :end_date, required: true  %>
</div>

<div>
  <%= f.label :number_guests, t('activerecord.attributes.booking.number_guests') %>: 
  <%= f.number_field :number_guests, required: true  %>
</div>

  <%= f.submit t('helpers.buttons.verify') %>
<% end %>
