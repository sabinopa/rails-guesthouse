<% if(@room.errors.any?) %>
  <p><%= t('errors.messages.verify_error') %></p>
  <ul>
    <% @room.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [@guesthouse, @room]) do |f| %>
  <div>
    <%= f.label :name %>: 
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>: 
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :size %>: 
    <%= f.number_field :size %> <%= t('views.form.meter') %>
  </div>

  <div>
    <%= f.label :max_people %>: 
    <%= f.number_field :max_people %> <%= t('views.form.people') %>
  </div>

  <div>
    <%= f.label :price %>: <%= t('views.form.real') %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.check_box :bathroom %>
    <%= f.label :bathroom %>
  </div>

  <div>
    <%= f.check_box :balcony %>
    <%= f.label :balcony %>
  </div>

  <div>
    <%= f.check_box :air_conditioner %>
    <%= f.label :air_conditioner %>
  </div>

  <div>
    <%= f.check_box :tv %>
    <%= f.label :tv %>
  </div>

  <div>
    <%= f.check_box :wardrobe %>
    <%= f.label :wardrobe %>
  </div>

  <div>
    <%= f.check_box :safe %>
    <%= f.label :safe %>
  </div>

  <div>
    <%= f.check_box :accessibility %>
    <%= f.label :accessibility %>
  </div>

  <%= f.submit t('helpers.submit.submit') %>

<% end %>